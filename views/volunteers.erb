<h3><%= @volunteer.name %></h3>

<h4>Working on: <%= @project.title %></h4>

<form action="/volunteers/<%= @volunteer.id %>" method="post">
  <h5>Update volunteer info</h5>
  <input type="hidden" name="_method" value="patch">
  <label for="name">New Name</label>
  <input type="text" name="name" placeholder="Jane Dough">
  <button type="submit" name="update">Update Volunteer</button>
</form>
